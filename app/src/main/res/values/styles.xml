<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>

        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppTheme.Text.Heading" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.Text.Subheading" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">22sp</item>
    </style>


    <style name="AppTheme.Text.Body2" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:alpha">0.64</item>
    </style>

    <style name="AppTheme.Text.Transparent" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="AppTheme.Text.Display1" parent="Base.TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/colorSecundary</item>
        <item name="fontPath">fonts/raleway_semibold.ttf</item>
    </style>


    <style name="AppTheme.Text.Body" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:paddingTop">8dp</item>
    </style>


    <style name="AppTheme.Text.Headline" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:paddingTop">8dp</item>
        <item name="fontPath">fonts/raleway_regular.ttf</item>
    </style>

    <style name="AppTheme.Text.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.LinearLayoutSeparator" parent="Theme.AppCompat">
        <item name="android:background">@color/colorSecundaryDark</item>
    </style>

    <style name="AppTheme.LinearLayoutSeparator.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin_small</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin_small</item>
    </style>

    <style name="AppTheme.BotonInicioBuscado" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">#ffffff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorSecundary</item>
        <item name="fontPath">fonts/raleway_semibold.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="AppTheme.BotonInicioFiltro" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:backgroundTint">#ffffff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorSecundary</item>
        <item name="fontPath">fonts/raleway_semibold.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">30dp</item>
    </style>
</resources>
