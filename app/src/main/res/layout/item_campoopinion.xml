<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin_small"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/activity_vertical_margin_small"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sizesmall"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:paddingLeft="@dimen/activity_vertical_margin_small"
            android:alpha="0.3"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_local_drink"/>
        <ImageView
            android:id="@+id/sizenormal"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="bottom"
            android:alpha="0.3"
            android:src="@drawable/ic_local_drink"/>
        <ImageView
            android:id="@+id/sizelarge"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:alpha="0.3"
            android:paddingRight="@dimen/activity_vertical_margin_small"
            android:src="@drawable/ic_local_drink"/>

        <TextView
            android:id="@+id/marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1" />
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:paddingRight="@dimen/activity_vertical_margin_small"
        android:paddingLeft="@dimen/activity_vertical_margin_small"
        android:src="@drawable/ic_thumb_up"/>
        <TextView
            android:id="@+id/numoks"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>