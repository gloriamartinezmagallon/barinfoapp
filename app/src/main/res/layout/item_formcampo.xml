<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/TextAppearance.AppCompat.Medium"
        android:text="nombre"
        android:id="@+id/nombre"/>
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin_small"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
                android:id="@+id/marcaACV"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_vertical_margin_small"
            android:layout_gravity="bottom"
            android:completionThreshold="1"
            android:hint="Marca"/>
        <LinearLayout
            android:id="@+id/tamanio"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin_small"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/sizesmall"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:paddingLeft="@dimen/activity_vertical_margin_small"
                android:alpha="0.3"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_local_drink"/>
            <ImageView
                android:id="@+id/sizenormal"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="bottom"
                android:alpha="0.3"
                android:src="@drawable/ic_local_drink"/>
            <ImageView
                android:id="@+id/sizelarge"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:alpha="0.3"
                android:paddingRight="@dimen/activity_vertical_margin_small"
                android:src="@drawable/ic_local_drink"/>
        </LinearLayout>
     </LinearLayout>
</LinearLayout>