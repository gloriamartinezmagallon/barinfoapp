<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/barNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BarNombre"
            android:textAppearance="@style/AppTheme.Text.Display1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_small"
            android:id="@+id/especialidad"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/infoubicacion"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Text.Headline"
                android:text="Información"/>

            <LinearLayout style="@style/AppTheme.LinearLayoutSeparator.Horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        style="@style/AppTheme.Text.Body"
                        android:id="@+id/distancia"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        style="@style/AppTheme.Text.Body"
                        android:text="Direccion"
                        android:id="@+id/direccion"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        style="@style/AppTheme.Text.Body"
                        android:text="Zona"
                        android:id="@+id/zona"/>
                </LinearLayout>
                <com.google.android.gms.maps.MapView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:id="@+id/map"/>
            </LinearLayout>

            <LinearLayout style="@style/AppTheme.LinearLayoutSeparator.Horizontal"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/AppTheme.Text.Headline"
            android:text="Opiniones"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/ic_add_white_24dp"
            android:layout_margin="@dimen/activity_vertical_margin_small"
            android:id="@+id/fab2"/>
    </LinearLayout>

        <LinearLayout style="@style/AppTheme.LinearLayoutSeparator.Horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <amagi82.flexibleratingbar.FlexibleRatingBar
                android:id="@+id/flexibleRatingBar"
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.5"
                app:colorFillOff="@android:color/transparent"
                app:colorFillOn="@color/colorPrimary"
                app:colorFillPressedOff="@android:color/transparent"
                app:colorFillPressedOn="@color/colorPrimary"
                app:colorOutlineOff="@color/colorPrimary"
                app:colorOutlineOn="@color/colorPrimary"
                app:colorOutlinePressed="@color/colorPrimary"
                app:polygonVertices="0"
                android:isIndicator="true"
                app:polygonRotation="0"
                app:strokeWidth="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/numopiniones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:text="Sin opiniones" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/infoopiniones">
        <LinearLayout style="@style/AppTheme.LinearLayoutSeparator.Horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lo eligiría....?"
            android:paddingBottom="@dimen/activity_vertical_margin_small"
            android:textAppearance="@style/AppTheme.Text.Caption"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/containerTipos"/>

        <LinearLayout style="@style/AppTheme.LinearLayoutSeparator.Horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiene..."
            android:paddingBottom="@dimen/activity_vertical_margin_small"
            android:textAppearance="@style/AppTheme.Text.Caption"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/containerTiene"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
